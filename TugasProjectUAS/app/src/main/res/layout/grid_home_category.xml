<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/buttonAllCategory"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/background_category">

        <ImageView
            android:id="@+id/imageCategory"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:src="@drawable/ornament_bone1"
            android:layout_centerHorizontal="true"
            android:paddingTop="5dp" />

        <TextView
            android:id="@+id/textCategory"
            android:layout_below="@+id/imageCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dinotoons"
            android:text="ALL CATEGORY"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:textStyle="normal"
            android:layout_centerHorizontal="true"
            android:paddingVertical="5dp"
            android:paddingHorizontal="4dp"
            android:paddingBottom="10dp"/>

    </RelativeLayout>

</RelativeLayout>