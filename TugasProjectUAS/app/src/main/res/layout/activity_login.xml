<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="login.LoginActivity">

    <ImageView
        android:id="@+id/background"
        android:layout_width="wrap_content"
        android:layout_height="230dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ornament_bone1"
        android:visibility="visible" />

    <TextView
        android:id="@+id/title"
        android:layout_below="@+id/background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/dino_park"
        android:text="Welcome to DinoLearn"
        android:textColor="#70a531"
        android:textSize="30sp"
        android:textStyle="normal"
        android:visibility="visible" />

    <TextView
        android:id="@+id/subtitle"
        android:layout_below="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:text="Login account"
        android:fontFamily="@font/dinotoons"
        android:textColor="#e4b477"
        android:textSize="22sp"
        android:textStyle="normal"
        android:visibility="visible" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutColumnEmail"
        android:layout_below="@id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp">

        <EditText
            android:id="@+id/columnEmail"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:hint="Email"
            android:textSize="10sp"
            android:fontFamily="@font/dino_park"
            android:inputType="textEmailAddress" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutColumnPassword"
        android:layout_below="@+id/layoutColumnEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp">

        <EditText
            android:id="@+id/columnPassword"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:hint="Password"
            android:textSize="10sp"
            android:fontFamily="@font/dino_park"
            android:inputType="textPassword" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/forgotPassword"
        android:layout_below="@+id/layoutColumnPassword"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="55dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="end"
        android:text="Forgot password ?"
        android:textSize="16sp"
        android:fontFamily="@font/dinotoons"
        android:textColor="#8f714b"
        android:visibility="visible" />


    <RelativeLayout
        android:id="@+id/buttonLogin"
        android:layout_below="@+id/forgotPassword"
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_go">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:layout_centerInParent="true"
            android:fontFamily="@font/dinotoons"
            android:text="Login"
            android:textSize="22dp"
            android:textColor="#f0f6e9"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/subtitle2"
        android:layout_below="@id/buttonLogin"
        android:layout_alignParentStart="true"
        android:layout_marginStart="70dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't have account"
        android:textSize="17sp"
        android:fontFamily="@font/dinotoons"
        android:textColor="#e4b477"/>

    <TextView
        android:id="@+id/signUp"
        android:layout_below="@+id/buttonLogin"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:textSize="17sp"
        android:fontFamily="@font/dinotoons"
        android:textColor="#8f714b" />

</RelativeLayout>